@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
        <MudText Typo="Typo.h6">Document Approval System</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.AddHomeWork" Color="Color.Inherit" Href="https://github.com/alessandroPicchiotti" Target="_blank" />
    </MudAppBar>
    
    <MudDrawer Open="true" Elevation="2" Variant="DrawerVariant.Mini" OpenMiniOnHover="true">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Send">Submit Document</MudNavLink>
            <MudNavLink Href="/workflows" Icon="@Icons.Material.Filled.ViewList">Workflows</MudNavLink>
            <MudNavLink Href="/about" Icon="@Icons.Material.Filled.Info">About</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>